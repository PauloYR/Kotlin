<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root_layout"
        tools:context=".MainActivity"
        android:background="#fff"
>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent" 
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" 
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" 
            android:id="@+id/linearLayout2">
        <TextView
                android:text="Jogo da "
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/textView"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/coiny_regular"
        />
        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp" app:srcCompat="@drawable/velhinha" tools:layout_editor_absoluteY="127dp"
                tools:layout_editor_absoluteX="192dp" android:id="@+id/imageView"/>
    </LinearLayout>
    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tableLayout">

        <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn1"
                    style="@style/BtnGamer"
                    android:onClick="positionButtom"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn2"
                    style="@style/BtnGamer"
                    android:onClick="positionButtom"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn3"
                    style="@style/BtnGamer"
                    android:onClick="positionButtom"
            />
        </TableRow>
        <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn4"
                    style="@style/BtnGamer"
                    android:onClick="positionButtom"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn5"
                    style="@style/BtnGamer"
                    android:onClick="positionButtom"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn6"
                    style="@style/BtnGamer"
                    android:onClick="positionButtom"
            />
        </TableRow>
        <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn7"
                    style="@style/BtnGamer"
                    android:onClick="positionButtom"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn8"
                    style="@style/BtnGamer"
                    android:onClick="positionButtom"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn9"
                    style="@style/BtnGamer"
                    android:onClick="positionButtom"
            />
        </TableRow>
    </TableLayout>
    <Button
            android:text="Jogar Novamente"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/reset" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/btnResetar" android:textColor="#fff" android:textAllCaps="false"
            android:onClick="positionButtom"
    />
</android.support.constraint.ConstraintLayout>
